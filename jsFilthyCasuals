let allGames = []; // almacenamos los juegos

async function loadGames() {
    /*try { // Aquí comenté todo este bloque para inhabilitarlo porque no permitía cargar directamente los datos desde el .json que finalmente descarté.
      const response = await fetch('jsonData.json');
      allGames = await response.json();
  
      displayGames(allGames);
    } catch (error) {
      console.error('Error loading games:', error);
    } */
    displayGames(gamesData, false, null);
  }
  
function displayGames(gamesList, displaydescripcion = false, filtroCategoria = null, filtroId = null) {
    const mainContent = document.getElementById('main-content');
    mainContent.innerHTML = ''; // Limpiar el contenido actual

    let filteredGames = gamesList;

    // Filtrar juegos por categoría si se proporciona
    if (filtroCategoria) {
        filteredGames = filteredGames.filter(game => game.categoria === filtroCategoria);
// Encontrar el objeto de categoría que coincide con filtroCategoria
    const categoriaObj = categoriaData.find(cat => cat.categoria === filtroCategoria);
    
    // Si se encuentra un objeto de categoría y tiene una imagen, mostrarla
    if (categoriaObj && categoriaObj.imagen) {
        const categoryImage = document.createElement('img');
        categoryImage.src = categoriaObj.imagen;
        categoryImage.className = 'category-image';
        mainContent.appendChild(categoryImage);

        if (categoriaObj.descripcion) {
            const categoryDescription = document.createElement('p');
            categoryDescription.innerText = categoriaObj.descripcion;
            categoryDescription.className = 'article-description';
            mainContent.appendChild(categoryDescription);
        }
    }
    }

    // Filtrar por ID si se proporciona
    if (filtroId !== null) {
        filteredGames = filteredGames.filter(game => game.id === filtroId);
    }

    filteredGames.forEach(game => {
        const gameContainer = document.createElement('div');
        gameContainer.className = 'game-container';
        gameContainer.setAttribute('data-id', game.id);

        let gameContent = `
        <h3>${game.nombre}</h3>
        <p>Categoría: ${game.categoria}</p>
        <img src="${game.imagen}" class="article-image">
        <p>Edición: ${game.edicion}</p>
        <p>Precio: ${game.precio}</p>
    `;
    
    if (displaydescripcion) {
        gameContent += `<p>${game.descripcion}</p>`;
    }
    gameContainer.innerHTML = gameContent;
    
    gameContainer.addEventListener('click', function() {
        displayGames(gamesList, true, null, game.id);
    });

    mainContent.appendChild(gameContainer);
    }
    
    )
    
}
function filterByCategory(filtroCategoria) {
    displayGames(gamesData, false, filtroCategoria);
}

document.addEventListener('DOMContentLoaded', loadGames);
